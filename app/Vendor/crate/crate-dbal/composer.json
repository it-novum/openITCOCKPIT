{
    "name": "crate/crate-dbal",
    "description": "A Doctrine Database Abstraction Layer for the Crate.io DBMS",
    "license": "Apache2",
    "homepage": "https://github.com/crate/crate-dbal",
    "keywords": ["database", "dbal", "doctrine", "crate"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~5.5|~7.0",
        "doctrine/dbal": "~2.5.5",
        "crate/crate-pdo": "~0.6.0"
    },
    "autoload": {
        "psr-0": {
            "Crate\\DBAL": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5.2"
    },
    "autoload-dev": {
        "psr-0": {
            "Crate\\Test": "test",
            "Doctrine\\Tests": "vendor/doctrine/dbal/tests"
        }
    }
}
